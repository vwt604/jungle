<section class="orders-show">

  <header class="page-header">
    <h1>Confirmation for Order #<%= @order.id %></h1>
  </header>



  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>
  
  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <tr>
      <% @items.each do |item|%>
        <tr>
          <td><%=item.product.name%></td>
          <td><%=humanized_money_with_symbol item.item_price_cents / 100.0%></td>
          <td><%=item.total_price_cents / (item.item_price_cents)%></td>
          <td><%=humanized_money_with_symbol item.total_price_cents / 100.0%></td>
        </tr>
      <% end %>
      </tr>
      </tbody>
      <tfoot>
          <tr>
            <th colspan="3">
              Total:
            </th>
            <th>
              $ XX
            </th>
          </tr>
        </tfoot>
    </table>
  </div>

  




  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
